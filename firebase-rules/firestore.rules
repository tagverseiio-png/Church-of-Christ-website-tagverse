rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Gallery collection - public read, admin write
    match /gallery/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Contacts collection - admin only
    match /contacts/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

// Note: Make sure to create an index for gallery collection:
// Collection: gallery
// Fields: createdAt (Descending)
// This will be automatically created when you first query, or you can create it manually in Firebase Console
